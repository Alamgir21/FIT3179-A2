{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Alamgir21/FIT3179-A2/refs/heads/main/Data/Arrivals%20in%20Australia%20by%20citizenship%20long%20format.csv"
  },
  "transform": [
    {"calculate": "toDate(datum.Date, '%d/%m/%y')", "as": "MonthDate"},
    {"calculate": "timeFormat(datum.MonthDate, '%Y-%d')", "as": "YearMonth"}
  ],
  "params": [
    {
      "name": "Date_selection",
      "value": "2019-09",
      "bind": {
        "input": "month",
        "min": "2016-09",
        "max": "2021-06",
        "name": "Date:"
      }
    }
  ],
  "vconcat": [
    {
      "width": 800,
      "height": 450,
      "title": "Migrants into Australia by citizenship in September 2017",
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/Alamgir21/FIT3179-A2/refs/heads/main/Map_files/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "NA"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "NA"}}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/Alamgir21/FIT3179-A2/refs/heads/main/Map_files/ne_110m_admin_0_countries.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {"filter": "datum.YearMonth == Date_selection"}
          ],
          "encoding": {
            "shape": {"field": "geo", "type": "geojson"},
            "color": {
              "field": "Arrivals",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [10, 100, 500, 1000],
                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
              },
              "title": "Migrants"
            },
            "tooltip": [
              {"field": "Country", "type": "nominal", "title": "Country"},
              {
                "field": "Arrivals",
                "type": "quantitative",
                "title": "Migrants",
                "format": ","
              }
            ]
          },
          "layer": [
            {"mark": {"type": "geoshape", "stroke": "antiquewhite"}},
            {
              "transform": [
                {
                  "calculate": "toDate(datum.Date, '%d/%m/%y')",
                  "as": "MonthDate"
                },
                {
                  "calculate": "timeFormat(datum.MonthDate, '%Y-%d')",
                  "as": "YearMonth"
                },
                {"filter": "datum.YearMonth == Date_selection"},
                {
                  "window": [{"op": "rank", "as": "ranking"}],
                  "sort": [{"field": "Arrivals", "order": "descending"}]
                },
                {"filter": "datum.ranking == 1"},
                {
                  "calculate": "'The largest number of; arrivals were from '+ datum['Country'] + '; with a total of '+ datum.Arrivals + ' people.'",
                  "as": "text_anno_raw"
                },
                {
                  "calculate": "split(datum.text_anno_raw, ';')",
                  "as": "text_annotation"
                }
              ],
              "mark": {
                "type": "text",
                "align": "right",
                "dx": 90,
                "dy": 120,
                "baseline": "middle",
                "fontStyle": "italic",
                "color": "black"
              },
              "encoding": {"text": {"field": "text_annotation"}, "color": {}}
            }
          ]
        }
      ]
    },
    {
      "width": 800,
      "height": 450,
      "title": "Total tourists in Australia Per Month that are non-Australian citizens",
      "transform": [
        {"filter": "datum.Country !== 'Australia'"},
        {
          "aggregate": [
            {"op": "sum", "field": "Arrivals", "as": "arrivals_sum"}
          ],
          "groupby": ["YearMonth"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "YearMonth",
          "type": "ordinal",
          "axis": {"title": "Date"}
        },
        "y": {
          "field": "arrivals_sum",
          "type": "quantitative",
          "axis": {
            "tickBand": "center",
            "grid": false,
            "title": "Sum of arrivals per month"
          }
        },
        "tooltip": [
          {"field": "YearMonth", "type": "ordinal", "title": "Date"},
          {
            "field": "arrivals_sum",
            "type": "quantitative",
            "title": "Migrants",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}